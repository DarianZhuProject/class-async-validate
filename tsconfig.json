{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./dist",
    "jsx": "preserve",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": [
      "node"
    ],
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
